<div class="city-details">
<h2><a href="/countries/<%= @city.country_id %>"><%= @city.country.name %></a></h2>

<h2><%= @city.name %></h2>

<p><img src="<%= @city.image %>"width="760" height="480"></p>

<h3> Have you been there?: <%= @city.if_visited ? "Yes" : "No" %></h3>

<a href="/cities/<%= @city.id %>/edit"><input type="submit" value="Edit City" style="width: 140px;"></a>


<form method="post" action="/cities/<%= @city.id %>/delete">
<input type="submit" value="Delete City" style="width: 140px;"/>
</form>
</div>
