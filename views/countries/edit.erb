<form method="post" action="/countries/<%= @country.id %>">
  <label for="name-field">Country Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @country.name %>"
  />

  <label for="continent-field">Continent:</label>
  <input
  type="text"
  name="continent"
  id="continent-field"
  value="<%= @country.continent %>"
  />

  <input type='submit' value="Update">
</form>
