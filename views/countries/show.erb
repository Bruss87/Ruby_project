<div class="country-details">
<h1><%= @country.continent %></h1>
<h2><%= @country.name %></h2

<ul></ul>
<ul>
  <% @country.cities.each do |city| %>
  <li>
     <a href="/cities/<%= city.id %>"><%= city.name %></a>
  </li>
  <% end %>
</ul>

<a href="/countries/<%= @country.id %>/edit"><input type="submit" value="Edit Country" style="width: 140px" ></a>


<form method="post" action="/countries/<%= @country.id %>/delete">
  <input type="submit" value="Delete Country" style="width: 140px">
</form>
</div>
