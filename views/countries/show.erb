<h1><%= @country.continent %></h1>
<h2><%= @country.name %></h2
<ul>
  <% @country.cities.each do |city| %>
  <li>
    <p><%= city.name %></p>
  </li>
  <% end %>
</ul>
<p><a href="/countries/<%= @country.id %>/edit">Edit Country</a></p>
<form method="post" action="/countries/<%= @country.id %>/delete">
  <input type="submit" value="Delete Country"/>
</form>
