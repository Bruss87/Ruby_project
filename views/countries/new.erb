<h1>Add new country to your list</h1>

<form method="post" action="/countries">
  <label for="name">Country Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  />

  <label for="continent">Continent:</label>
  <input
  type="text"
  name="continent"
  id="continent-field"
  />

  <input type="submit" value="add country">
</form>
